CC=gcc
CFLAGS=-c -Wall -g
LDFLAGS=-lm -lpthread -g
SOURCES=skyplot.c compute.c culling.c fileio.c math.c memory.c gnuplot_i.c \
	statistics.c visual.c
OBJECTS=$(SOURCES:.c=.o)
EXECUTABLE=skyplot

all: $(SOURCES) $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(CC) $(LDFLAGS) $(OBJECTS) -o $@

.c.o:
	$(CC) $(CFLAGS) $< -o $@
clean:
	rm $(OBJECTS)
	rm $(EXECUTABLE)

